doctype html
html
head
  title Expense Tracking App
  link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
  link(rel='stylesheet' href='/css/style.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css')
body
  nav.navbar.navbar-expand-lg.bg-body-tertiary.bg-primary-subtle
    .container-fluid
      a.navbar-brand(href='/dashboard') Dashboard
      button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNavAltMarkup' aria-controls='navbarNavAltMarkup' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNavAltMarkup.collapse.navbar-collapse
        .navbar-nav
          a.nav-link(aria-current='page' href='/expense-table') Expenses
      #navbarNavAltMarkup.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right
      if user
        li
          a.float-lg-right.nav-link(aria-current='page' href='/users/login') Login out
      else  
        li
          a.float-lg-right.nav-link.mr-3(aria-current='page' href='/users/register') Register
        li
          a.float-md-right.nav-link(aria-current='page' href='/users/login') Login



.container
  !=messages('message',locals)
  if errors 
    each error, i  in errors
      div(class='alert alert-danger') #{error.msg}
  block content
script(src='/bower_components/jquery/dist/jquery.js')
script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
script(src='/js/main.js')